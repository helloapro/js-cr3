<!-- Button trigger modal -->
<button class="btn btn-success btn-block btn-lg new-question-btn" data-toggle="modal" data-target="#myModal">
  Add your question to the collective queue...
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Submit your question</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-3">
            <div class="ui medium image">
              <img src="https://upload.wikimedia.org/wikipedia/commons/7/74/Sketchbook_of_fishes_-_18._(Pot_bellied)_Sea_horse_-_William_Buelow_Gould,_c1832.jpg">
            </div>
          </div>
          <div class="col-sm-9">
            <div class="description">
              <form>
                <div class="form-group">
                  <label for="author">Your name</label>
                  {{input class="form-control" value=author}}
                </div>

                <div class="form-group">
                  <label for="question">Question</label>
                  {{input class="form-control" value=questioncontent}}
                </div>

                <div class="form-group">
                  <label for="notes">Additional Notes</label>
                  {{textarea class="form-control" value=notes}}
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-success"{{action 'saveQuestion'}} data-dismiss="modal"><i class="checkmark icon"></i>Submit question!</button>
      </div>
    </div>
  </div>
</div>
