<div class="ui comments">
  <div class="comment answers-and-answer-box">
    <a class="avatar">
      <img src="http://images.vinylpulse.com/vp_pics/munky_king/whaleboy/release/whaleboy-bobby11_001_b.jpg">
    </a>
    <div class="content">
      <div class="ui buttons">
        <button class="ui positive button" {{action 'upvoteAnswer' answer}}><i class="fa fa-arrow-up" aria-hidden="true"></i></button>
        <div class="or"></div>
        <button class="ui button" {{action 'downvoteAnswer' answer}}><i class="fa fa-arrow-down" aria-hidden="true"></i></button>
      </div>
      <a class="author">{{answer.author}}</a>
      <div class="metadata">
        <div class="date">{{moment-from-now answer.date}}</div>
      </div>
      <div class="text">
        {{answer.answercontent}}
      </div>
    </div>
  </div>
</div>
