{{#if editQuestionForm}}
  <form>
    <div class="form-group">
      <label for="author">Your name</label>
      {{input class="form-control" value=author}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input class="form-control" value=question}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{textarea class="form-control" value=notes}}
    </div>

    <button class="btn btn-warning" {{action 'update' question}}>Submit edits</button>
  </form>
{{else}}
  <button class="btn btn-warning" {{action 'editQuestionForm'}}>Edit your question</button>
{{/if}}
