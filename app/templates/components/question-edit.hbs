{{#if editQuestionForm}}
<div>
  <form>
    <div class="form-group">
      <label for="author">Your name</label>
      {{input placeholder=question.author class="form-control" value=author}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input placeholder=question.questioncontent class="form-control" value=questioncontent}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{textarea placeholder=question.notes class="form-control" value=notes}}
    </div>

    <button class="btn btn-warning" {{action 'update' question}}>Submit edits</button>
  </form>
</div>

{{else}}
  <button class="btn btn-warning" {{action 'editQuestionForm'}}>Edit your question</button>
{{/if}}
