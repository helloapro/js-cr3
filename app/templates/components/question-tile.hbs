<div class="col-sm-4">
  <div class="ui card">
    <div class="image">
      <img src="https://cdn.shopify.com/s/files/1/0922/5218/products/51UbxlwihvL._SL500_large.jpeg?v=1438118534">
    </div>
    <div class="content">
      <a class="header">{{#link-to 'question' question.id}}{{question.author}}'s question:{{/link-to}}</a>
      <div class="description">
        {{#link-to 'question' question.id}}{{question.questioncontent}}{{/link-to}}
      </div>
      <div class="meta">
        <span class="date">(Asked {{moment-from-now question.date}})</span>
      </div>
    </div>
    <div class="extra content">
      <div class="row">
        <div class="col-sm-4">
          <a>
            <i class="user icon"></i>
            {{question.answers.length}} answers
          </a>
        </div>
        <div class="col-sm-8">
          <div class="dropdown closed">
            <button class="btn btn-secondary btn-warning btn-block dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Edit question...
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item">
                {{question-edit update="update" question=question}}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
